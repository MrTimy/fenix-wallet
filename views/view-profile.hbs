{{!< profile }}

<section class="profile-container">

  {{#if errorMessage}}
    <p class="error-message" id="msgBox">{{errorMessage}}</p>
  {{/if}}

  {{#if successMessage}}
    <p class="success-message" id="msgBox">{{successMessage}}</p>
  {{/if}}

  <div class="profile-picture-container">
    <div class="profile-picture-wrapper">
      <img
        src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png?20150327203541"
        class="profile-picture"
        alt="Profile Picture"
      />
      <div>
        {{! <input type="text" /> }}
        {{! <i class="bi bi-camera-fill camera-icon"></i> }}
      </div>
    </div>
  </div>

  <form method="post" action="/actions/profile">
    <div class="form-group" style="margin: 12px auto;">
      <label for="firstName">First Name</label>
      <input
        type="text"
        class="form-control"
        id="firstName"
        name="firstName"
        value="{{firstName}}"
      />
    </div>

    <div class="form-group" style="margin: 12px auto;">
      <label for="lastName">Last Name</label>
      <input
        type="text"
        class="form-control"
        id="lastName"
        name="lastName"
        value="{{lastName}}"
      />
    </div>

    <div class="form-group" style="margin: 12px auto;">
      <label for="email">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        value="{{email}}"
      />
    </div>

    <div class="form-group" style="margin: 12px auto;">
      <label for="accountNumber">Account Number</label>
      <input
        type="text"
        class="form-control"
        id="accountNumber"
        readonly
        value="{{accountNumber}}"
        name="accountNumber"
      />
    </div>

    <div style="display: flex; justify-content: center">
      <button
        type="submit"
        class="btn btn-primary"
        style="margin-top: 8px"
      >Update</button>
    </div>

  </form>
</section>