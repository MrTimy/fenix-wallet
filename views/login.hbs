{{!< index }}

<form
  action="/auth/login"
  method="post"
  style="width: 30%; border: 1px solid #0a2558; padding: 24px; background-color: #fff; border-radius: 24px"
>
  <h3 style="text-align: center; margin-bottom: 24px">Login</h3>

  {{#if errorMessage}}
    <p class="error-message" id="msgBox">
      {{errorMessage}}
    </p>
  {{/if}}

  <div class="form-group" style="margin: 12px auto;">
    <label for="email">Email: </label>
    <input type="email" class="form-control" id="email" name="email" value="{{oldInput.email}}" />
  </div>

  <div class="form-group" style="margin: 12px auto;">
    <label for="password">Password: </label>
    <input type="password" class="form-control" id="password" name="password" value="{{oldInput.password}}" />
  </div>

  <div style="display: flex; justify-content: center">
    <button
      type="submit"
      class="btn btn-primary"
      style="margin-top: 8px"
    >Login</button>
  </div>

  <h6 style="margin: 16px; text-align: center">Don't have an account?
    <a href="/auth/register" style="text-decoration: none">register</a>
  </h6>

  {{!-- <input type="hidden" name="_csrf" value="{{csrfToken}}" />deprecated --}}
</form>

<script>

  function clearMsg() {
    const msgRef = document.querySelector("#msgBox")
    msgRef.textContent = ""
  }

  // get the input forms
  const passwordRef = document.querySelector("#password") 
  passwordRef.addEventListener("focus", clearMsg)
  const emailRef = document.querySelector("#email") 
  emailRef.addEventListener("focus", clearMsg)

</script>