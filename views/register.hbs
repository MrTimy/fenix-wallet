{{!< index }}

<form
  action=""
  style="width: 30%; border: 1px solid #0a2558; padding: 24px; background-color: #fff; border-radius: 24px"
>
  <h3 style="text-align: center; margin-bottom: 24px">Register</h3>
  <div class="form-group" style="margin: 12px auto;">
    <label for="firstName">First Name: </label>
    <input type="text" class="form-control" id="firstName" name="firstName" />
  </div>

  <div class="form-group" style="margin: 12px auto;">
    <label for="lastName">Last Name: </label>
    <input type="text" class="form-control" id="lastName" name="lastName" />
  </div>

  <div class="form-group" style="margin: 12px auto;">
    <label for="otherNames">Other Names: </label>
    <input type="text" class="form-control" id="otherNames" name="otherNames" />
  </div>

  <div class="form-group" style="margin: 12px auto;">
    <label for="email">Email: </label>
    <input type="email" class="form-control" id="email" name="email" />
  </div>

  <div class="form-group" style="margin: 12px auto;">
    <label for="password">Password: </label>
    <input type="password" class="form-control" id="password" name="password" />
  </div>

  <div style="display: flex; justify-content: center">
    <button
      type="submit"
      class="btn btn-primary"
      style="margin-top: 8px"
    >Register</button>
  </div>

  <h6 style="margin: 16px; text-align: center">Already have an account?
    <a href="/auth/login" style="text-decoration: none">login</a>
  </h6>
</form>