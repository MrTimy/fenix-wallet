{{!< main }}

{{#if successMsg}}
  <p class="success-message">{{successMsg}}</p>
{{/if}}

{{#if errorMessage}}
  <p class="error-message">{{successMsg}}</p>
{{/if}}

<div class="wallet-activity-wrapper">
  <h4 style="color: #333; margin-top: 6px">Wallet activities</h4>
  <div class="card">

    <div
      style="display: flex; align-items: center !important; justify-content: space-between !important; margin-bottom: 16px"
    >
      <p
        style="text-align: center; align-self: center; width: 20%; margin-bottom: 0px !important"
      >Filter by: </p>
      <div style="width: 80%">
        <button
          type="button"
          class="btn btn-primary"
          style="width: 30%; margin-right: 2%"
        >Transfers</button>
        <button
          type="button"
          class="btn btn-primary"
          style="width: 30%;  margin-right: 2%"
        >Deposits</button>
        <button
          type="button"
          class="btn btn-primary"
          style="width: 30%;  margin-right: 2%"
        >Withdrawals</button>
      </div>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Status</th>
          <th scope="col">Type</th>
          <th scope="col">Amount</th>
        </tr>
      </thead>
      <tbody>
        {{#each transfers}}
          <tr>
            <td style="width: 30%">{{this.createdAt}}</td>
            <td style="width: 25%">{{this.status}}</td>
            <td style="width: 25%">Transfer</td>
            <td style="width: 20%">â‚¦{{this.amount}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>